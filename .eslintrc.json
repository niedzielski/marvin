{
  "extends": [
    "node-services",
    "prettier"
  ],
  "plugins": [
    "prettier"
  ],
  "rules": {
    "prettier/prettier": "error"
  },
  "parser": "typescript-eslint-parser",
  "parserOptions": {
    "ecmaVersion": 2016,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "impliedStrict": true
    }
  },
  "env": {
    "es6": true,
    "node": false
  },
  "overrides": [
    {
      "files": [ "*.ts", "*.tsx" ],
      "rules": {
        // Disable rules with known issues.
        // https://github.com/eslint/typescript-eslint-parser#known-issues
        "no-undef": 0,
        "no-unused-vars": 0,
        "no-useless-constructor": 0,
        "space-infix-ops": 0
      }
    }
  ]
}
