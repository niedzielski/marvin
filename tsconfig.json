{
  "include": ["src/common"],
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "jsx": "react",
    "jsxFactory": "h",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": true,

    // todo: reenable. This is causing ts-loader errors in
    //       node_modules/unfetch/dist/unfetch.es.js.
    // "checkJs": true,

    "strict": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "newLine": "LF",
    // This option creates problems with the typeRoots in OS X. See:
    // https://github.com/Microsoft/TypeScript/issues/17617
    "forceConsistentCasingInFileNames": false,

    // Not available for ts-node: https://github.com/TypeStrong/ts-node/pull/414
    "pretty": true
  }
}
