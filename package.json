{
  "name": "marvin",
  "version": "0.0.0",
  "description": "An API driven skin for MediaWiki",
  "scripts": {
    "--- PRIMARY ---": "# Frequent user scripts.",
    "start": "npm-run-all --silent clean --parallel start:\\*",
    "watch": "run-p -s start:\\* test:watch",
    "build": "NODE_ENV=production npm-run-all --silent clean --parallel build:\\*",
    "format": "npm run -s lint -- --fix",
    "lint": "eslint --cache --max-warnings 0 --report-unused-disable-directives --ext ts,tsx,js,json .",
    "test": "run-p -s lint build mocha",
    "test:watch": "nodemon -i dist -e js,json,ts,tsx ${VERBOSE:--q} -x 'npm test -s'",
    "--- SECONDARY ---": "# Useful but rarely used scripts.",
    "mocha": "TS_NODE_PROJECT=src/server mocha '{src,test}/**/*.test.{ts,js}'",
    "clean": "rm -rf dist/",
    "--- HOOKS ---": "# Triggered scripts.",
    "precommit": "npm test -s",
    "--- INTERNAL ---": "# Private scripts.",
    "start:server": "nodemon -i dist -i src/client -e js,json,ts,tsx ${VERBOSE:--q} -x 'ts-node -P src/server src/server'",
    "start:client": "webpack-dev-server -dw",
    "build:server": "tsc -p src/server && copyup 'src/**/*.{css,svg}' dist/",
    "build:client": "webpack -p"
  },
  "repository": {
    "type": "git",
    "url": "git+https://phabricator.wikimedia.org/source/marvin.git"
  },
  "keywords": [
    "mediawiki",
    "wikimedia",
    "web",
    "node",
    "pwa"
  ],
  "author": "Wikimedia Foundation",
  "license": "GPL-2.0+",
  "bugs": {
    "url": "https://phabricator.wikimedia.org/project/profile/2878/"
  },
  "homepage": "https://phabricator.wikimedia.org/project/profile/2878/",
  "engines": {
    "node": ">= 6",
    "npm": ">= 5"
  },
  "dependencies": {
    "compression": "1.7.1",
    "domino": "1.0.29",
    "express": "4.16.1",
    "isomorphic-unfetch": "2.0.0",
    "path-to-regexp": "2.0.0",
    "preact": "8.2.5",
    "preact-render-to-string": "3.6.3"
  },
  "devDependencies": {
    "@types/assets-webpack-plugin": "3.5.0",
    "@types/compression": "0.0.34",
    "@types/express": "4.0.37",
    "@types/extract-text-webpack-plugin": "3.0.0",
    "@types/history": "4.6.0",
    "@types/mocha": "2.2.43",
    "@types/node": "8.0.32",
    "@types/node-fetch": "1.6.7",
    "@types/touch": "3.1.0",
    "assets-webpack-plugin": "3.5.1",
    "copyfiles": "1.2.0",
    "css-loader": "0.28.7",
    "eslint": "4.8.0",
    "eslint-config-node-services": "2.2.3",
    "eslint-config-prettier": "2.6.0",
    "eslint-config-wikimedia": "0.5.0",
    "eslint-plugin-import": "2.7.0",
    "eslint-plugin-jsdoc": "3.1.3",
    "eslint-plugin-json": "1.2.0",
    "eslint-plugin-prettier": "2.3.1",
    "extract-text-webpack-plugin": "3.0.1",
    "history": "4.7.2",
    "husky": "0.14.3",
    "ignore-styles": "5.0.1",
    "mocha": "4.0.1",
    "nodemon": "1.12.1",
    "npm-run-all": "4.1.1",
    "prettier": "1.7.4",
    "sinon": "4.0.1",
    "style-loader": "0.19.0",
    "svg-inline-loader": "0.8.0",
    "touch": "3.1.0",
    "ts-loader": "2.3.7",
    "ts-node": "3.3.0",
    "typescript": "2.5.3",
    "typescript-eslint-parser": "8.0.0",
    "webpack": "3.6.0",
    "webpack-dev-server": "2.9.1",
    "wikimedia-ui-base": "0.9.2"
  }
}
