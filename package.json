{
  "name": "marvin",
  "version": "0.0.0",
  "description": "An API driven skin for MediaWiki",
  "scripts": {
    "--- PRIMARY ---": "# Frequent user scripts.",
    "start": "npm-run-all --silent clean --parallel 'client:watch -- -d' server:watch",
    "watch": "run-p -s start test:watch",
    "build": "NODE_ENV=production npm-run-all --silent clean --parallel server:build 'client:build -- -p'",
    "format": "npm run -s lint -- --fix",
    "lint": "eslint --cache --max-warnings 0 --ext ts,tsx,js,json .",
    "test": "run-p -s lint build mocha",
    "test:watch": "nodemon -i dist -e js,json,ts,tsx ${VERBOSE:--q} -x 'npm test -s'",
    "--- SECONDARY ---": "# Useful but rarely used scripts.",
    "mocha": "TS_NODE_PROJECT=src/server mocha '{src,test}/**/*.test.{ts,js}'",
    "clean": "rm -rf dist/",
    "--- HOOKS ---": "# Triggered scripts.",
    "precommit": "npm test -s",
    "--- INTERNAL ---": "# Private scripts.",
    "server:watch": "nodemon -i dist -i src/client -e js,json,ts,tsx ${VERBOSE:--q} -x 'ts-node -P src/server src/server'",
    "server:build": "tsc -p src/server",
    "client:watch": "webpack-dev-server -w",
    "client:build": "webpack"
  },
  "repository": {
    "type": "git",
    "url": "git+https://phabricator.wikimedia.org/source/marvin.git"
  },
  "keywords": [
    "mediawiki",
    "wikimedia",
    "web",
    "node",
    "pwa"
  ],
  "author": "Wikimedia Foundation",
  "license": "GPL-2.0+",
  "bugs": {
    "url": "https://phabricator.wikimedia.org/project/profile/2878/"
  },
  "homepage": "https://phabricator.wikimedia.org/project/profile/2878/",
  "engines": {
    "node": ">= 6",
    "npm": ">= 5"
  },
  "dependencies": {
    "express": "^4.15.3",
    "preact": "^8.2.1",
    "preact-render-to-string": "^3.6.3"
  },
  "devDependencies": {
    "@types/assets-webpack-plugin": "^3.5.0",
    "@types/express": "^4.0.36",
    "@types/mocha": "^2.2.41",
    "@types/node": "^8.0.20",
    "@types/page": "^1.5.32",
    "@types/touch": "^3.1.0",
    "assets-webpack-plugin": "^3.5.1",
    "css-loader": "^0.28.5",
    "eslint": "^4.4.1",
    "eslint-config-node-services": "^2.2.3",
    "eslint-config-prettier": "^2.3.0",
    "eslint-config-wikimedia": "^0.4.0",
    "eslint-plugin-jsdoc": "^3.1.2",
    "eslint-plugin-json": "^1.2.0",
    "eslint-plugin-prettier": "^2.1.2",
    "extract-text-webpack-plugin": "^3.0.0",
    "husky": "^0.14.3",
    "ignore-styles": "^5.0.1",
    "mocha": "^3.5.0",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "page": "^1.7.1",
    "prettier": "^1.6.1",
    "sinon": "^3.0.0",
    "style-loader": "^0.18.2",
    "touch": "^3.1.0",
    "ts-loader": "^2.3.2",
    "ts-node": "^3.3.0",
    "typescript": "^2.4.2",
    "typescript-eslint-parser": "^5.0.1",
    "webpack": "^3.4.1",
    "webpack-dev-server": "^2.7.1"
  }
}
