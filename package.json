{
  "name": "marvin",
  "version": "0.0.0",
  "description": "An API driven skin for MediaWiki",
  "scripts": {
    "//": "MAIN SCRIPTS",
    "start": "run-p -sn 'client:build -- -w' 'server:build -- -w' server:watch",
    "build": "NODE_ENV=production npm-run-all --silent clean --parallel server:build 'client:build -- -p'",
    "format": "run-p -s 'eslint -- --fix .' 'prettier -- --write'",
    "lint": "run-p -sn 'eslint -- .' 'prettier -- -l'",
    "test": "run-p -sn lint build mocha",
    "test:watch": "nodemon -e js,json,ts,tsx -q -x 'npm test'",

    "//-": "HOOKS",
    "precommit": "npm test -s",

    "//--": "HELPERS",
    "server:watch": "nodemon -e js,json,ts,tsx -q -x 'npm run server:run'",
    "server:build": "tsc -p src/server/tsconfig.json",
    "server:run": "node dist/server/index.js",
    "client:build": "webpack --display minimal",

    "//---": "TOOLS",
    "prettier": "prettier --parser typescript '{src,test}/**/*.{ts,tsx}'",
    "eslint": "eslint --cache --max-warnings 0 --ext js,json",
    "mocha": "mocha '{src,test}/**/*.test.{ts,js}'",
    "clean": "rm -rf dist/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://phabricator.wikimedia.org/source/marvin.git"
  },
  "keywords": [
    "mediawiki",
    "wikimedia",
    "web",
    "node",
    "pwa"
  ],
  "author": "Wikimedia Foundation",
  "license": "GPL-2.0+",
  "bugs": {
    "url": "https://phabricator.wikimedia.org/project/profile/2878/"
  },
  "homepage": "https://phabricator.wikimedia.org/project/profile/2878/",
  "engines": {
    "node": ">= 6",
    "npm": ">= 5"
  },
  "dependencies": {
    "express": "^4.15.3"
  },
  "devDependencies": {
    "@types/express": "^4.0.36",
    "@types/mocha": "^2.2.41",
    "@types/node": "^8.0.20",
    "assets-webpack-plugin": "^3.5.1",
    "clean-webpack-plugin": "^0.1.16",
    "eslint": "^3.19.0",
    "eslint-config-node-services": "^2.2.2",
    "eslint-config-prettier": "^2.3.0",
    "eslint-config-wikimedia": "^0.4.0",
    "eslint-plugin-jsdoc": "^3.1.2",
    "eslint-plugin-json": "^1.2.0",
    "eslint-plugin-prettier": "^2.1.2",
    "husky": "^0.14.3",
    "mocha": "^3.5.0",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "prettier": "^1.5.3",
    "sinon": "^3.0.0",
    "ts-loader": "^2.3.2",
    "ts-node": "^3.3.0",
    "typescript": "^2.4.2",
    "typescript-eslint-parser": "^5.0.1",
    "webpack": "^3.4.1"
  }
}
