{
  "name": "marvin",
  "version": "0.0.0",
  "description": "An API driven skin for MediaWiki",
  "main": "dist/server",
  "scripts": {
    "--- PRIMARY ---": "# Frequent user scripts.",
    "start": "run-p -s 'build:server -- -d' start:\\*",
    "watch": "run-p -s 'build:server -- -dw' start:\\* watch:test",
    "build": "NODE_ENV=production run-p -s build:\\*",
    "format": "npm run -s lint -- --fix",
    "lint": "eslint --cache --max-warnings 0 --report-unused-disable-directives --ext ts,tsx,js,json .",
    "test": "npm-run-all --silent -p lint build mocha -s bundlesize",
    "--- SECONDARY ---": "# Useful but rarely used scripts.",
    "mocha": "mocha '{src,test}/**/*.test.{ts,tsx,js}'",
    "bundlesize": "bundlesize",
    "--- HOOKS ---": "# Triggered scripts.",
    "precommit": "npm test -s",
    "--- INTERNAL ---": "# Private scripts.",
    "start:server": "nodemon -C ${VERBOSE:--q} --watch dist/",
    "start:client": "webpack-dev-server --config src/client/webpack.config.ts -dw",
    "watch:test": "nodemon ${VERBOSE:--q} -e js,json,ts,tsx,css --watch src/ --exec 'run-p -s lint mocha'",
    "build:server": "webpack --config src/server/webpack.config.ts",
    "build:client": "webpack --config src/client/webpack.config.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://phabricator.wikimedia.org/source/marvin.git"
  },
  "keywords": [
    "mediawiki",
    "wikimedia",
    "web",
    "node",
    "pwa"
  ],
  "author": "Wikimedia Foundation",
  "license": "GPL-2.0+",
  "bugs": {
    "url": "https://phabricator.wikimedia.org/project/profile/2878/"
  },
  "homepage": "https://phabricator.wikimedia.org/project/profile/2878/",
  "engines": {
    "node": ">= 6",
    "npm": ">= 5"
  },
  "dependencies": {
    "compression": "1.7.1",
    "domino": "1.0.30",
    "express": "4.16.2",
    "isomorphic-unfetch": "2.0.0",
    "path-to-regexp": "2.1.0",
    "preact": "8.2.6",
    "preact-render-to-string": "3.7.0"
  },
  "devDependencies": {
    "@types/assets-webpack-plugin": "3.5.0",
    "@types/clean-webpack-plugin": "0.1.0",
    "@types/compression": "0.0.34",
    "@types/copy-webpack-plugin": "4.0.1",
    "@types/express": "4.0.39",
    "@types/extract-text-webpack-plugin": "3.0.0",
    "@types/history": "4.6.1",
    "@types/mocha": "2.2.44",
    "@types/node": "8.0.47",
    "@types/node-fetch": "1.6.7",
    "@types/sinon": "4.0.0",
    "@types/webpack-node-externals": "1.6.0",
    "assets-webpack-plugin": "3.5.1",
    "bundlesize": "0.15.3",
    "clean-webpack-plugin": "0.1.17",
    "copy-webpack-plugin": "4.2.0",
    "css-loader": "0.28.7",
    "eslint": "4.10.0",
    "eslint-config-node-services": "2.2.3",
    "eslint-config-prettier": "2.7.0",
    "eslint-config-wikimedia": "0.5.0",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-jsdoc": "3.1.3",
    "eslint-plugin-json": "1.2.0",
    "eslint-plugin-prettier": "2.3.1",
    "extract-text-webpack-plugin": "3.0.2",
    "history": "4.7.2",
    "husky": "0.14.3",
    "ignore-loader": "0.1.2",
    "ignore-styles": "5.0.1",
    "mocha": "4.0.1",
    "nodemon": "1.12.1",
    "npm-run-all": "4.1.1",
    "prettier": "1.7.4",
    "sinon": "4.1.0",
    "style-loader": "0.19.0",
    "svg-inline-loader": "0.8.0",
    "ts-loader": "3.1.1",
    "ts-node": "3.3.0",
    "typescript": "2.6.1",
    "typescript-eslint-parser": "9.0.0",
    "uglifyjs-webpack-plugin": "1.0.1",
    "webpack": "3.6.0",
    "webpack-dev-server": "2.9.1",
    "webpack-node-externals": "1.6.0",
    "wikimedia-ui-base": "0.9.2"
  },
  "bundlesize": [
    {
      "path": "dist/public/index.*.js",
      "maxSize": "3.7KB"
    },
    {
      "path": "dist/public/runtime.*.js",
      "maxSize": "1KB"
    },
    {
      "path": "dist/public/vendor.*.js",
      "maxSize": "8.2KB"
    },
    {
      "path": "dist/public/pages/about.*.js",
      "maxSize": "1KB"
    },
    {
      "path": "dist/public/pages/home.*.js",
      "maxSize": "0.8KB"
    },
    {
      "path": "dist/public/pages/summary.*.js",
      "maxSize": "2.1KB"
    },
    {
      "path": "dist/public/pages/wiki.*.js",
      "maxSize": "2.8KB"
    }
  ]
}
